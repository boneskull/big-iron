{
  "devDependencies": {
    "@semantic-release/condition-travis": "^4.1.4",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "commitizen": "^2.8.6",
    "condition-node-version": "^1.3.0",
    "cz-lerna-changelog": "^0.3.0",
    "eslint": "^3.5.0",
    "eslint-config-semistandard": "^7.0.0",
    "eslint-config-standard": "^6.0.1",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "ghooks": "^1.3.2",
    "lerna": "2.0.0-beta.27",
    "lerna-semantic-release": "^8.0.2",
    "mocha": "^3.0.2",
    "nsp": "^2.6.1",
    "nyc": "^8.3.0",
    "opt-cli": "^1.5.1",
    "p-s": "^3.0.1",
    "seneca": "^3.1.0",
    "validate-commit-msg": "^2.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    },
    "ghooks": {
      "pre-commit": "opt --out pre-commit --exec \"npm test\"",
      "commit-msg": "opt --out commit-msg --exec validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "build",
        "ci"
      ]
    }
  },
  "release": {
    "verifyConditions": [
      {
        "path": "condition-node-version",
        "node": "6"
      },
      "@semantic-release/condition-travis"
    ]
  },
  "scripts": {
    "start": "p-s",
    "test": "p-s test"
  }
}
